generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ciudad {
  id     String @id @default(cuid())
  nombre String @unique
  slug   String @unique
  telos  Telo[]

  @@map("ciudades")
}

model Telo {
  id          String   @id @default(cuid())
  nombre      String
  slug        String   @unique
  direccion   String
  ciudad      String
  precio      Int
  telefono    String?
  servicios   String[]
  descripcion String?
  rating      Float    @default(0)
  imagen      String?
  lat         Float?
  lng         Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("telos")
}
